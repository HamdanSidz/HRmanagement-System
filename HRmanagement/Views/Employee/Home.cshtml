@model IEnumerable<HRmanagement.Models.Employee>

@{
    ViewData["Title"] = "Home";
}


<div class="container">
    <div class="row">
        <div class="col-sm-8 offset-2 mt-3">

            <h2>Employee List</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Emp_id</td>
                            <td>@employee.Emp_Name</td>
                            <td>@employee.Emp_Title</td>
                            <td>@employee.Emp_Department</td>
                            <td>@employee.Emp_Email</td>
                            <td>@employee.Emp_Phone</td>
                            <td>
                                <a class="btn btn-outline-primary"  asp-action="EditEmployee" asp-route-id="@employee.Emp_id">Edit</a> |
                                <a class="btn btn-outline-danger" asp-action="DeleteEmployee" asp-route-id="@employee.Emp_id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-outline-secondary" asp-action="CreateEmployee">Create</a>

        </div>
    </div>
</div>



